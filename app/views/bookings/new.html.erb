<h1 class="text-center">New Booking</h1>

<div class="container">
  <%= simple_form_for([@costume, @booking]) do |f| %>

      <%= f.input :start_date, as: :date, input_html: { class: 'form-control mb-3', style: 'padding: 10px'} %>
      <%= f.input :end_date, as: :date, input_html: { class: 'form-control mb-3', style: 'padding: 10px'} %>
      <%= f.input :price, input_html: {disabled: :true} %>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>
</div>
