<h1>Booking Details</h1>


<ul>
  <li>
    <strong>Start Date : </strong> <%= @booking.start_date %><br>
    <strong>End Date : </strong> <%= @booking.end_date %><br>
    <strong>Price : </strong> <%= number_to_currency(@booking.price) %><br>
    <strong>Total : </strong> <% number_to_currency(@booking.total) %>
  </li>
</ul>

<%= link_to "Delete", booking_path(@booking), method: :delete, data: {confirm: "Are you sure?"} %>
