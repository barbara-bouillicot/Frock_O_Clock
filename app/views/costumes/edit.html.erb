<div class="container w-25 my-3">
<h1>Edit your costume</h1>

<%= simple_form_for(@costume) do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :size %>
  <%= f.input :material %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class:"btn btn-form", value: "Edit costume"%>
<% end %>
</div>
